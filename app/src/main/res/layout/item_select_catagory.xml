<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimValue_5"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/dimValue_5"
    card_view:cardElevation="@dimen/dimValue_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimValue_5"
        android:gravity="center"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/image_catagory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_120px"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/tv_catagory_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_5"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/dimTextSize_14" />

            <TextView
                android:id="@+id/tv_catagory_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_3"
                android:singleLine="true"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/dimTextSize_12" />




    </LinearLayout>
</android.support.v7.widget.CardView>
