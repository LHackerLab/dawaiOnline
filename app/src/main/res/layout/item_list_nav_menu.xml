<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimValue_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nav_menuicon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_weight="2"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/dimTextSize_20" />

        <TextView
            android:id="@+id/nav_menutitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimValue_5"
            android:layout_weight="8"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/dimTextSize_16" />
    </LinearLayout>
</LinearLayout>
