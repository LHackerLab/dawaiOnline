<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:background="@drawable/inner_background"
    tools:context=".fragments.LabTestsFragment">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical">-->

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_marginTop="@dimen/dimValue_10"
            android:text="Buy Medicine"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/dimTextSize_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_menu_camera" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/edit_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Doctor Name"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimTextSize_40"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@color/shop_name"
                android:gravity="center"
                android:text="Pick prescription"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTextSize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/size_60px"
                android:layout_height="@dimen/size_60px"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimValue_10"
                android:src="@drawable/ic_description_black_24dp" />

            <Button
                android:id="@+id/btn_saved"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimTextSize_40"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@color/shop_name"
                android:gravity="center"
                android:text="Use Save prescription"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTextSize_14" />
        </LinearLayout>
    <!--</LinearLayout>-->

</LinearLayout>