<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inner_background"
    tools:context=".fragments.LabTestsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_marginTop="@dimen/dimValue_10"
            android:text="Buy Medicine"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/dimTextSize_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/size_60px"
                android:layout_height="@dimen/size_60px"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimValue_10"
                android:src="@drawable/ic_menu_camera" />

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimTextSize_40"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@color/shop_name"
                android:gravity="center"
                android:text="Pick prescription"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTextSize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimValue_10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_60px"
                android:layout_height="@dimen/size_60px"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimValue_10"
                android:src="@drawable/ic_description_black_24dp" />

            <Button
                android:id="@+id/btn_saved"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimTextSize_40"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@color/shop_name"
                android:gravity="center"
                android:text="Use Save prescription"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTextSize_14" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>