<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inner_background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_10px"
                android:layout_weight=".88"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/select_locality_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimValue_10"
                    android:hint="Select City"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/dimValue_10"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimValue_1"
                    android:layout_marginLeft="@dimen/dimValue_14"
                    android:layout_marginRight="@dimen/dimValue_13"
                    android:background="@color/secondary_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimValue_10"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimValue_10">

                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Address"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/primary_text"
                            android:textColorHint="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />


                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimValue_10">

                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Phone"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColorHint="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />


                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimValue_10">

                        <EditText
                            android:id="@+id/edt_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Pincode"
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true"
                            android:textColorHint="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout

                        android:id="@+id/layout_landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_landmark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Landmark"
                            android:singleLine="true"
                            android:textColorHint="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />


                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dimValue_1"
            android:layout_weight=".12"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/save_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@drawable/border_layout_red"
                android:gravity="center"
                android:padding="@dimen/dimValue_10">

                <TextView
                    android:id="@+id/address_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimsixe_1dp"
                    android:layout_weight=".36"
                    android:gravity="center|right"
                    android:textColor="@color/Dark_red"
                    android:textSize="@dimen/dimTextSize_25" />

                <TextView
                    android:id="@+id/saveaddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".64"
                    android:gravity="center|left"
                    android:text="@string/save_address"
                    android:textColor="@color/Dark_red"
                    android:textSize="@dimen/dimTextSize_18" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>