<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimValue_10"
        app:cardCornerRadius="@dimen/dimValue_5"
        app:cardElevation="@dimen/dimValue_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/Yellow_new"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimTextSize_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/image_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimValue_5"
                    android:layout_weight="0.3">

                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_80px"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baby" />

                    <ImageView
                        android:id="@+id/productImageCopy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_80px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimValue_5"
                    android:layout_marginRight="@dimen/dimValue_5"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimValue_2"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />

                    <TextView
                        android:id="@+id/productSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimValue_5"
                        android:gravity="left"
                        android:singleLine="true"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/dimTextSize_12" />

                    <!--<WebView-->
                    <!--android:id="@+id/productDetails"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dimValue_7"-->
                    <!--android:gravity="left"-->
                    <!--android:textColor="@color/secondary_text"-->
                    <!--android:textSize="@dimen/dimTextSize_12" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimValue_7"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/rupees_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Dark_new"
                                android:textSize="@dimen/dimTextSize_14" />

                            <TextView
                                android:id="@+id/productPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimValue_1"
                                android:textColor="@color/Dark_new"
                                android:textSize="@dimen/dimTextSize_14" />


                            <!--<TextView-->
                            <!--android:layout_width="@dimen/dimValue_1"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="@dimen/dimValue_15"-->
                            <!--android:background="@color/divider" />-->


                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_5"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linearLayout_weight2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimValue_10"
                    android:layout_marginRight="@dimen/dimValue_10"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_margin="@dimen/dimValue_5"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">


                        <LinearLayout
                            android:id="@+id/linearLayout_liter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimValue_5"
                            android:layout_marginLeft="@dimen/dimValue_10"
                            android:layout_marginRight="@dimen/dimValue_10">


                            <TextView
                                android:id="@+id/decrement_Product"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:background="@drawable/drawble_cart"
                                android:gravity="center"
                                android:hint="-"
                                android:padding="@dimen/dimValue_3"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/dimTextSize_20"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView_nos"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/dimValue_10"
                                android:layout_weight="0.4"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack"
                                android:textSize="@dimen/dimTextSize_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/increase_Product"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:background="@drawable/drawble_cart"
                                android:gravity="center"
                                android:hint="+"
                                android:padding="@dimen/dimValue_3"
                                android:textColor="@color/primary_text"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/dimTextSize_20"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/textView_addToCart"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimTextSize_40"
                        android:layout_marginLeft="@dimen/dimValue_10"
                        android:layout_weight=".5"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="@string/Addtocart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimTextSize_14" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>

