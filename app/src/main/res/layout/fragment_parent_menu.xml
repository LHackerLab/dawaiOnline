<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/inner_background"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimTextSize_35"
            android:layout_marginBottom="@dimen/dimValue_5"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_marginRight="@dimen/dimValue_10"
            android:layout_marginTop="@dimen/dimValue_5"
            android:background="@drawable/search_bar"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="@dimen/dimValue_5"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dimValue_10"
            android:text="Search Medicines or Products"
            android:textColor="@color/shop_name"
            android:textSize="@dimen/dimTextSize_16" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_parent_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimValue_5"
            android:elevation="@dimen/dimValue_10"
            app:cardCornerRadius="@dimen/dimValue_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimValue_5"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_medicin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimValue_2"
                        android:layout_weight=".33"
                        android:gravity="center">

                        <fusionsoftware.loop.dawaionline.utilities.CircleImageView
                            android:layout_width="@dimen/size_80px"
                            android:layout_height="@dimen/size_80px"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cart_circle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimValue_5"
                                android:layout_marginTop="@dimen/dimValue_5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Medicines"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimTextSize_10" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_lab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimValue_2"
                        android:layout_marginRight="@dimen/dimValue_2"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:orientation="vertical">

                        <fusionsoftware.loop.dawaionline.utilities.CircleImageView
                            android:layout_width="@dimen/size_80px"
                            android:layout_height="@dimen/size_80px"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cart_circle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimValue_5"
                                android:layout_marginTop="@dimen/dimValue_5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Lab Tests"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimTextSize_10" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_otc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimValue_2"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:orientation="vertical">

                        <fusionsoftware.loop.dawaionline.utilities.CircleImageView
                            android:id="@+id/img_parent_manu"
                            android:layout_width="@dimen/size_80px"
                            android:layout_height="@dimen/size_80px"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cart_circle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:id="@+id/tv_parent_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimValue_5"
                                android:layout_marginTop="@dimen/dimValue_5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="OTC Products"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimTextSize_10" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimValue_5"
                    android:layout_marginTop="@dimen/dimValue_5"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_healtharticle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimValue_2"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:orientation="vertical">

                        <fusionsoftware.loop.dawaionline.utilities.CircleImageView
                            android:layout_width="@dimen/size_80px"
                            android:layout_height="@dimen/size_80px"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cart_circle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimValue_5"
                                android:layout_marginTop="@dimen/dimValue_5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Health Articles"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimTextSize_10" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_healthrecord"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimValue_2"
                        android:layout_marginRight="@dimen/dimValue_2"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:orientation="vertical">

                        <fusionsoftware.loop.dawaionline.utilities.CircleImageView
                            android:layout_width="@dimen/size_80px"
                            android:layout_height="@dimen/size_80px"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cart_circle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimValue_5"
                                android:layout_marginTop="@dimen/dimValue_5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Health Records"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimTextSize_10" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_earn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimValue_2"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:orientation="vertical">

                        <fusionsoftware.loop.dawaionline.utilities.CircleImageView
                            android:layout_width="@dimen/size_80px"
                            android:layout_height="@dimen/size_80px"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cart_circle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimValue_5"
                                android:layout_marginTop="@dimen/dimValue_5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Earn CasePoint"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimTextSize_10" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/white">

                            </View>
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_orderPre"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimTextSize_40"
            android:layout_marginBottom="@dimen/dimValue_5"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_marginRight="@dimen/dimValue_10"
            android:layout_marginTop="@dimen/dimValue_5"
            android:background="@drawable/capsuleshape_fill_button_blue"
            android:drawableLeft="@drawable/ic_menu_slideshow"
            android:drawableRight="@drawable/ic_trending_up_black_24dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dimValue_10"
            android:paddingRight="@dimen/dimValue_10"
            android:text="Order with Prescription"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <!--view pager -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_150px">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dimValue_5"
                android:layout_marginRight="@dimen/dimValue_5" />

            <fusionsoftware.loop.dawaionline.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:padding="10dip"
                app:centered="true"
                app:fillColor="#ff0099"
                app:pageColor="#FF0000"
                app:snap="false" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_marginRight="@dimen/dimValue_10"
            android:layout_marginTop="@dimen/dimValue_5"
            android:text="Trending Articles"
            android:textColor="@color/shop_name"
            android:textSize="@dimen/dimTextSize_14" />
        <!--view pager -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_150px"
            android:layout_marginBottom="@dimen/dimValue_10"
            android:layout_marginTop="@dimen/dimValue_10">

            <android.support.v4.view.ViewPager
                android:id="@+id/pagertwo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dimValue_5"
                android:layout_marginRight="@dimen/dimValue_5" />

            <fusionsoftware.loop.dawaionline.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicatortwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:padding="10dip"
                app:centered="true"
                app:fillColor="#ff0099"
                app:pageColor="#FF0000"
                app:snap="false" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
