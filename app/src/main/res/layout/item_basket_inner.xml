<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimValue_2"
    android:layout_marginTop="@dimen/dimValue_2"
    android:orientation="horizontal">
    <!--<LinearLayout-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight=".1">-->
    <!--<TextView-->
    <!--android:id="@+id/tv_delete"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:textColor="@color/red"-->
    <!--android:gravity="center"-->
    <!--android:textSize="@dimen/dimTextSize_30"/>-->
    <!--</LinearLayout>-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimValue_5"
        app:cardCornerRadius="@dimen/dimValue_5"
        app:cardElevation="@dimen/dimValue_5">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dimValue_2"
                android:layout_marginTop="@dimen/dimValue_2"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/dimTextSize_22"
                android:layout_alignParentRight="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/Item_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:text="Item"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />

                    <TextView
                        android:id="@+id/quantity_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:background="@drawable/two_side_line_box"
                        android:gravity="center"
                        android:text="Quantity"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />


                    <TextView
                        android:id="@+id/price_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:text="Price"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />
                    <!--<TextView-->
                    <!--android:id="@+id/tv_delete"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:textColor="@color/red"-->
                    <!--android:gravity="center"-->
                    <!--android:text=""-->
                    <!--android:layout_alignParentTop=""-->
                    <!--android:textSize="@dimen/dimTextSize_30"/>-->
                    <!--</RelativeLayout>-->


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimValue_1"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_12" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:layout_marginRight="@dimen/dimValue_2"
                        android:layout_marginLeft="@dimen/dimValue_2"
                        android:background="@drawable/two_side_line_box"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/decrement_Product"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:gravity="end"
                            android:padding="@dimen/dimValue_3"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_20" />

                        <TextView
                            android:id="@+id/Quantity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:padding="@dimen/dimValue_2"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />

                        <TextView
                            android:id="@+id/increase_Product"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:gravity="left"
                            android:padding="@dimen/dimValue_3"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_20" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/icon_rupees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_12" />

                        <TextView
                            android:id="@+id/itemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_12" />

                    </LinearLayout>


                </LinearLayout>
                <!--<TextView-->
                <!--android:id="@+id/tv_delete"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight=".15"-->
                <!--android:gravity="center"-->
                <!--android:padding="@dimen/dimValue_2"-->
                <!--android:textColor="@color/red"-->
                <!--android:textSize="@dimen/dimTextSize_20" />-->

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>