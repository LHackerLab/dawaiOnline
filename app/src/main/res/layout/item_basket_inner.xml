    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimValue_5"
        app:cardCornerRadius="@dimen/dimValue_5"
        app:cardElevation="@dimen/dimValue_5">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dimValue_2"
                android:layout_marginTop="@dimen/dimValue_2"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="@dimen/dimTextSize_22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimValue_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/Item_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:text="Item"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />

                        <TextView
                            android:id="@+id/quantity_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".4"
                            android:background="@drawable/two_side_line_box"
                            android:gravity="center"
                            android:text="Quantity"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />


                        <TextView
                            android:id="@+id/price_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:text="Price"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />
                        <!--<TextView-->
                        <!--android:id="@+id/tv_delete"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:textColor="@color/red"-->
                        <!--android:gravity="center"-->
                        <!--android:text=""-->
                        <!--android:layout_alignParentTop=""-->
                        <!--android:textSize="@dimen/dimTextSize_30"/>-->
                        <!--</RelativeLayout>-->


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimValue_1"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/item_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_12" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:background="@drawable/two_side_line_box"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/decrement_Product"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".35"
                                android:gravity="end"
                                android:padding="@dimen/dimValue_3"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_20" />

                            <TextView
                                android:id="@+id/Quantity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".3"
                                android:gravity="center"
                                android:padding="@dimen/dimValue_2"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_14" />

                            <TextView
                                android:id="@+id/increase_Product"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".35"
                                android:gravity="left"
                                android:padding="@dimen/dimValue_3"
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_20" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/icon_rupees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_12" />

                            <TextView
                                android:id="@+id/itemPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/primary_text"
                                android:textSize="@dimen/dimTextSize_12" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimValue_1"
                    android:background="@color/red" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimValue_5"
                    android:layout_marginLeft="@dimen/dimValue_10"
                    android:layout_marginRight="@dimen/dimValue_10"
                    android:layout_marginTop="@dimen/dimValue_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_Total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:gravity="center"
                            android:text="@string/Total"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />

                        <TextView
                            android:id="@+id/tv_discount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".33"
                            android:background="@drawable/two_side_line_box"
                            android:gravity="center"
                            android:text="Discount"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />


                        <TextView
                            android:id="@+id/tv_grandTotal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".34"
                            android:gravity="center"
                            android:text="@string/GrandTotal"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_14" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimValue_1"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:gravity="center"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/dimTextSize_12" />


                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".33"
                            android:gravity="center"
                            android:background="@drawable/two_side_line_box"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/dimTextSize_12" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".34"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/icon_rupeesgrandtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/shop_name"
                                android:textSize="@dimen/dimTextSize_14" />

                            <TextView
                                android:id="@+id/grand_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/shop_name"
                                android:textSize="@dimen/dimTextSize_15" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>